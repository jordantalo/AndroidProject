<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Destination">

    <TextView
        android:text="nom"
        android:layout_width="178dp"
        android:layout_height="33dp"
        android:id="@+id/nom" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"/>
    <TextView
        android:text="ville"
        android:layout_width="175dp"
        android:layout_height="27dp"
        android:id="@+id/ville" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/nom" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <TextView
        android:text="etoiles"
        android:layout_width="177dp"
        android:layout_height="28dp"
        android:id="@+id/etoiles"
        app:layout_constraintTop_toBottomOf="@+id/ville" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="8dp"/>


    <ImageView
        android:src="@mipmap/ic_launcher"
        android:layout_width="172dp"
        android:layout_height="126dp" tools:layout_editor_absoluteY="0dp"
        android:id="@+id/img" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ville"
        android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_bias="1.0"/>
</android.support.constraint.ConstraintLayout>